.recommended-area {

  ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }
   li {
      list-style: none;
    }

    a {
        text-decoration: none;
        cursor: pointer;
        color: #909090;
    }

    .recommended-entry-list-title {
        padding: 1.3rem 2rem;
        font-size: 1.25rem;
        font-weight: 600;
        color: #909090;
        border-bottom: 1px solid rgba(178, 186, 194, 0.15);
        }

    .entry-list {
        width: 100%;
        background-color: #fff;
    }

    .content-box {
        position: relative;
        background: #fff;
        padding: 16px 20px 0;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .meta-container .date {
        line-height: 14px;
        font-size: 14px;
        color: #86909c;
    }
    .tag_list {
        display: flex;
        height: 22px;
        overflow: hidden;
        position: absolute;
        top: 16px;
        right: 20px;
    }

    .tag_list .tag:first-child, .tag_list .tag:nth-child(2), .tag_list .tag:nth-child(3) {
        display: block;
    }

    .tag_list .tag {
        flex-shrink: 0;
        margin-left: 8px;
        padding: 0 8px;
        background: #fafafa;
        border-radius: 2px;
        font-size: 14px;
        line-height: 22px;
        color: #4e5969;
        display: none;
    }

    .tag_list .tag:hover {
        background: #e5e6eb;
    }

    .title-row {
        margin-top: 14px;
        margin-bottom: 12px;
    }

    .title {
        font-weight: 700;
        font-size: 18px;
        line-height: 24px;
        color: #1d2129;
        word-break: break-all;
    }

    .main-row {
        width: 100%;
        display: flex;
        border-bottom: 1px solid #e5e6eb;
    }

    .main-row .main-box {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .main-row .main-box .abstract {
        margin-bottom: 14px;
        font-size: 14px;
        line-height: 22px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .main-row .main-box .abstract a {
        color: #4e5969;
        height: 44px;
        display: block;
    }

    .thumb {
        flex: 0 0 auto;
        width: 142px;
        height: 80px;
        margin-left: 16px;
        margin-top: 17px;
        background-color: #fff;
        border-radius: 2px;
    }

    .lazy {
        position: relative;
        -o-object-fit: cover;
        object-fit: cover;
    }
}


